<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeRevealLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:dragEdge="right"
    app:mode="same_level">

    //Secondary layout (delete layout)
    <LinearLayout
        android:id="@+id/layoutDelete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvClickDeleteSongInPlaylist"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@color/colorRed"
            android:fontFamily="@font/montserrat_bold"
            android:text="Delete"
            android:gravity="center"
            android:textColor="@color/white" />
    </LinearLayout>

    //Main layout
    <LinearLayout
        android:id="@+id/songInPlaylistItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivSongInPlaylist"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitleSongInPlaylist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:hint="Song Name"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:paddingLeft="10dp"/>

            <TextView
                android:id="@+id/tvArtistNameSongInPlaylist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:hint="Singer Name"
                android:textColor="@color/white"
                android:textSize="10dp"
                android:paddingLeft="10dp"/>
        </LinearLayout>
    </LinearLayout>



</com.chauthai.swipereveallayout.SwipeRevealLayout>